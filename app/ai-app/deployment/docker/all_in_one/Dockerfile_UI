# Multi-stage build for Vite application with nginx serving

# Stage 1: Build stage
FROM node:22-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package files first (for better caching)
COPY ui/chat-web-app/package*.json ./

# Install dependencies
RUN npm ci --only=production=false

# Copy source code
COPY ui/chat-web-app .
COPY deployment/docker/all_in_one/.env.ui.build .env

# Build the application with Vite
RUN npm run build_no_lint

# Stage 2: Production stage with nginx
FROM nginx:alpine

# Remove default nginx static assets
RUN rm -rf /usr/share/nginx/html/*

# Copy built assets from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

ARG NGINX_CONFIG_FILE_PATH="deployment/docker/all_in_one/nginx_ui.conf"
# Copy custom nginx configuration (optional)
COPY $NGINX_CONFIG_FILE_PATH /etc/nginx/nginx.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]