# Multi-stage build for Vite application with nginx serving

# Stage 1: Build stage
FROM node:22-alpine AS builder

# Build arguments - NO DEFAULTS, must be provided
ARG UI_SOURCE_PATH
ARG UI_ENV_BUILD_RELATIVE

# Set working directory
WORKDIR /app

# Copy package files first (for better caching)
COPY ${UI_SOURCE_PATH}/package*.json ./

# Install dependencies
RUN npm ci --only=production=false

# Copy source code
COPY ${UI_SOURCE_PATH} .
COPY ${UI_ENV_BUILD_RELATIVE} .env

# Build the application with Vite
RUN npm run build_no_lint

# Stage 2: Production stage with nginx
FROM nginx:alpine

# Remove default nginx static assets
RUN rm -rf /usr/share/nginx/html/*

# Copy built assets from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

# Build argument for nginx config - NO DEFAULT
ARG NGINX_UI_CONFIG_FILE_PATH
COPY ${NGINX_UI_CONFIG_FILE_PATH} /etc/nginx/nginx.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
